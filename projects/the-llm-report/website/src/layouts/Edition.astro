---
// Layout for a full newsletter edition page
export interface Props {
  title: string;
  date: string;
  description?: string;
  readTime?: string;
  editionNumber?: number;
}

const { title, date, description, readTime, editionNumber } = Astro.props;
const canonicalUrl = Astro.url.href;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'NewsArticle',
  'headline': title,
  'datePublished': date,
  'author': { '@type': 'Organization', 'name': 'The LLM Report' },
  'publisher': {
    '@type': 'Organization',
    'name': 'The LLM Report',
    'url': 'https://thellmreport.com'
  },
  'description': description || '',
  'url': canonicalUrl,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description || title} />
  <title>{title} — The LLM Report</title>
  <link rel="canonical" href={canonicalUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description || ''} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="article:published_time" content={date} />
  <link rel="alternate" type="application/rss+xml" title="The LLM Report RSS" href="/rss.xml" />
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" />
  <link rel="stylesheet" href="/styles/global.css" />
</head>
<body>
  <header class="site-header">
    <div class="container">
      <a href="/" class="site-title">The LLM<span>.</span>Report</a>
      <nav class="site-nav" aria-label="Main navigation">
        <a href="/archive">Archive</a>
        <a href="/about">About</a>
        <a href="/subscribe" class="nav-cta">Subscribe</a>
      </nav>
    </div>
  </header>

  <main>
    <div class="container">
      <!-- AI label bar -->
      <div class="ai-label-bar">
        <strong>AI-generated briefing</strong>
        <span>{new Date(date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
        {readTime && <span class="read-time">⏱ {readTime}</span>}
        {editionNumber && <span>Edition #{editionNumber}</span>}
        <a href="/about" style="color: inherit; margin-left: auto;">How this is made →</a>
      </div>

      <article class="article-body">
        <slot />
      </article>

      <div class="subscribe-cta">
        Get The LLM Report in your inbox — <a href="/subscribe">subscribe free</a>. 4x per week, AI-curated.
      </div>
    </div>
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>
        <a href="/">Home</a> ·
        <a href="/archive">Archive</a> ·
        <a href="/rss.xml">RSS</a> ·
        <a href="/about">About</a> ·
        <a href="mailto:aifactory.ops@outlook.com">Contact</a>
      </p>
      <p class="mt-1">AI-generated content. <a href="/about">How it works.</a></p>
    </div>
  </footer>
</body>
</html>
