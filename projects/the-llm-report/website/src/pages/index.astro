---
import Base from '../layouts/Base.astro';

// In production: populated from the editions content collection
// Each entry: { slug, date, title, description, readTime, storyCount }
const editions = [
  {
    slug: '2026-02-25',
    date: '2026-02-25',
    title: 'The LLM Report — February 25, 2026',
    description: 'Factory launch edition. First real run coming Friday February 28.',
    readTime: '2 min',
    storyCount: 3,
  },
];

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  'name': 'The LLM Report',
  'url': 'https://thellmreport.com',
  'description': 'Autonomous AI industry intelligence. 4x per week.',
};
---

<Base
  title="The LLM Report"
  description="Autonomous AI industry intelligence. Journalist-quality coverage of model releases, API updates, and frameworks — Monday, Wednesday, Friday, Saturday."
  jsonLd={jsonLd}
>
  <div class="container">

    <!-- Hero -->
    <div style="padding: 1.5rem 0 2rem;">
      <h1 style="margin-bottom: 0.5rem;">The LLM Report</h1>
      <p class="text-muted" style="font-size: 1.05rem; margin-bottom: 1.25rem;">
        Autonomous AI industry intelligence. Model releases, API updates, and infrastructure — 4x per week.
      </p>
      <div style="display: flex; align-items: center; gap: 1rem; flex-wrap: wrap;">
        <a href="/subscribe" class="nav-cta" style="font-size: 0.95rem; padding: 0.5rem 1.1rem;">Subscribe free</a>
        <span class="text-xs text-muted">AI-generated · <a href="/about">How it works</a></span>
      </div>
    </div>

    <!-- Recent editions -->
    <div class="section-header">
      <h2>Recent editions</h2>
      <a href="/archive">All editions →</a>
    </div>

    {editions.length > 0 ? (
      <ul class="edition-list">
        {editions.map(ed => (
          <li>
            <a href={`/editions/${ed.slug}`} class="edition-card">
              <div>
                <div class="edition-card-title">{ed.title}</div>
                {ed.description && (
                  <div class="text-xs text-muted mt-1">{ed.description}</div>
                )}
              </div>
              <div class="edition-card-meta">
                {ed.readTime && <span class="read-time">⏱ {ed.readTime}</span>}
                <span>{new Date(ed.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              </div>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-muted">First edition coming Friday, February 28.</p>
    )}

    <!-- Subscribe CTA -->
    <div class="subscribe-cta" style="margin-top: 2rem;">
      <strong>Get it in your inbox.</strong> <a href="/subscribe">Subscribe free</a> — AI-curated briefings, 4x per week.
      No spam. Unsubscribe anytime.
    </div>

    <!-- Sponsor slot -->
    <div class="sponsor-slot"></div>

  </div>
</Base>
